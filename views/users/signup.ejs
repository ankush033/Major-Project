<%- layout('layouts/boilerPlate') -%>

<div class="row  mt-3">
      <h1 class="col-6 offset-3">SignUp</h1>
  <div class="col-6 offset-3">
  
    
    <form method="POST" action="/signup" novalidate class="needs-validation" >
      <div class="mb-3">
         <label for="username" class="form-label">Username</label>
      <input name="username" id="username" type="text" class="form-control" required/>
      <div class="valid-feedback"> Username Looks Good</div>
      </div>

      <div class="mb-3">
         <label for="email" class="form-label">Email</label>
      <input name="email" id="email" type="text" class="form-control" required/>
      <div class="valid-feedback">Valid Email</div>
      </div>

      <div class="mb-3">
         <label for="password" class="form-label">Password</label>
      <input name="password" id="password" type="text" class="form-control" required/>
      <div class="valid-feedback">Password Looks Good</div>
      </div>
      <button class="btn btn-success">Signup</button>
      </form>
      </div>
      </div>
      
    